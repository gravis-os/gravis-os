{
  "extends": "@gravis-os/tsconfig/tsconfig.base.json",
  "include": [
    "./src/**/*",
    "typings.d.ts",
    ".eslintrc.js",
    "./*.js",
    "./*.ts",
    "./public/*.js",
  ],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@gravis-os/ui": ["../../packages/ui/src/*"],
      "@gravis-os/form": ["../../packages/form/src/*"],
      "@gravis-os/crud": ["../../packages/crud/src/*"],
      "@gravis-os/auth": ["../../packages/auth/src/*"],
      "@gravis-os/types": ["../../packages/types/src/*"]
    }
  }
}

